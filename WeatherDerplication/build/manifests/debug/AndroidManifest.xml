<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.github.lukegjpotter.app.derpyweather">

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="17"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.github.lukegjpotter.app.derpyweather.CityListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_city_detail" android:name="com.github.lukegjpotter.app.derpyweather.CityDetailActivity" android:parentActivityName=".CityListActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".CityListActivity"/>
        </activity>
    </application>

</manifest>
